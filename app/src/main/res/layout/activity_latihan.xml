<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_tujuan"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".LatihanActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_latihan_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/bg_button_circle"
            android:clickable="true"
            android:elevation="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_chevron_left_black_24dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat"
            android:text="Kuis Belajar Pascal"
            android:textColor="@color/white"
            android:textSize="21sp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9">

        <ImageView
            android:id="@+id/img_kuis"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/image_quiz" />

        <TextView
            android:id="@+id/caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_kuis"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/montserrat_light"
            android:text="Latih kemampuanmu belajar\nPemrograman Pascal"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_quiz_soal_terpilih"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/caption"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:drawableEnd="@drawable/ic_check"
            android:drawablePadding="10dp"
            android:fontFamily="@font/montserrat"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/btn_quiz_pilih"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:background="@drawable/bg_quiz_whiteframe"
            android:drawableEnd="@drawable/ic_choose"
            android:drawablePadding="8dp"
            android:clickable="true"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/montserrat"
            android:paddingStart="32dp"
            android:paddingTop="8dp"
            android:paddingEnd="32dp"
            android:paddingBottom="12dp"
            android:text="Pilih Kuis"
            android:textSize="18sp" />

    </RelativeLayout>

    <Button
        android:id="@+id/btn_quiz_mulai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/bg_button"
        android:fontFamily="@font/montserrat_regular"
        android:text="Mulai Kuis"
        android:textColor="@color/white"
        android:textSize="20sp" />

</LinearLayout>